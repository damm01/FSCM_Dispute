<core:View&nbsp;                                                                                                                                                                                                                                               
	xmlns:core="sap.ui.core"&nbsp;                                                                                                                                                                                                                                
	xmlns:layout="sap.ui.layout"&nbsp;                                                                                                                                                                                                                            
	xmlns:form="sap.ui.layout.form"&nbsp;                                                                                                                                                                                                                         
	xmlns="sap.m"&nbsp;                                                                                                                                                                                                                                           
	xmlns:ushell="sap.ushell.ui"                                                                                                                                                                                                                                  
	xmlns:ca="sap.ca.ui"&nbsp;                                                                                                                                                                                                                                    
	xmlns:unified="sap.ui.unified"&nbsp;                                                                                                                                                                                                                          
	xmlns:suite="sap.suite.ui.commons"                                                                                                                                                                                                                            
	controllerName="fin.fscm.dm.dispute.manage.view.DisputeDetails"&nbsp;                                                                                                                                                                                         
	xmlns:smartTable="sap.ui.comp.smarttable"&nbsp;                                                                                                                                                                                                               
	>                                                                                                                                                                                                                                                             
	<Page id="detailsPage" showNavButton="true" navButtonPress="discardAllChanges" enableScrolling="true">                                                                                                                                                        
		<IconTabBar&nbsp;                                                                                                                                                                                                                                            
			id="idIconTabBarMulti"&nbsp;                                                                                                                                                                                                                                
			expanded="{device>/isNoPhone}"&nbsp;                                                                                                                                                                                                                        
			class="sapUiResponsiveContentPadding"&nbsp;                                                                                                                                                                                                                 
			stretchContentHeight="true"&nbsp;                                                                                                                                                                                                                           
			upperCase="true"                                                                                                                                                                                                                                            
			select="onDisputeIconTabPress"                                                                                                                                                                                                                              
			selectedKey="CASE"                                                                                                                                                                                                                                          
			>                                                                                                                                                                                                                                                           
			<items>                                                                                                                                                                                                                                                     
				<IconTabFilter text="Dispute Case" key="CASE" >                                                                                                                                                                                                            
					<content>                                                                                                                                                                                                                                                 
						<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">                                                                                                                                                                          
							<layoutData>                                                                                                                                                                                                                                            
								<layout:SplitterLayoutData resizable="false" size="100%"/>                                                                                                                                                                                             
							</layoutData>                                                                                                                                                                                                                                           
							<Panel>                                                                                                                                                                                                                                                 
								<content>                                                                                                                                                                                                                                              
									<layout:VerticalLayout id="customerFields" width="100%"/>                                                                                                                                                                                             
									<Label design="Bold"/>                                                                                                                                                                                                                                
								</content>                                                                                                                                                                                                                                             
							</Panel>                                                                                                                                                                                                                                                
						</ScrollContainer>                                                                                                                                                                                                                                       
					</content>                                                                                                                                                                                                                                                
				</IconTabFilter>                                                                                                                                                                                                                                           
				<IconTabFilter text="Notes" count="99">                                                                                                                                                                                                                    
					<TextArea id="NoteInput" rows="7" width="100%" placeholder="{i18n>TimelineEnterText}" liveChange="updateSaveButtonState"                                                                                                                                  
						enabled="{json>/EditMode}"/>                                                                                                                                                                                                                             
					<suite:Timeline id="CustomerHistory" content="{path:'GetNotes'}" showHeaderBar="false" enableScroll="false">                                                                                                                                              
						<suite:content>                                                                                                                                                                                                                                          
							<suite:TimelineItem userName="{CreatedByPersonName}" icon="sap-icon://activity-items" dateTime="{CreationDateTime}">                                                                                                                                    
								<suite:embeddedControl>                                                                                                                                                                                                                                
									<layout:VerticalLayout>                                                                                                                                                                                                                               
										<Text text="{NoteContent}"/>                                                                                                                                                                                                                         
									</layout:VerticalLayout>                                                                                                                                                                                                                              
								</suite:embeddedControl>                                                                                                                                                                                                                               
							</suite:TimelineItem>                                                                                                                                                                                                                                   
						</suite:content>                                                                                                                                                                                                                                         
					</suite:Timeline>                                                                                                                                                                                                                                         
				</IconTabFilter>                                                                                                                                                                                                                                           
				<IconTabFilter text="Documents" count="99">                                                                                                                                                                                                                
					<List id="linkedObjectsList" items="{GetLinkedObjects}" noDataText="{i18n>DisputeDetailLabelNoLinkedObjects}"                                                                                                                                             
						updateFinished="linkedObjectsLoadingFinsihed" class="sapUiSmallMargin">                                                                                                                                                                                  
						<headerToolbar>                                                                                                                                                                                                                                          
							<Toolbar>                                                                                                                                                                                                                                               
								<Title text="{i18n>DisputeDetailLabelDisputedObjects}" level="H3" id="textLinkedObjectsHeader"/>                                                                                                                                                       
							</Toolbar>                                                                                                                                                                                                                                              
						</headerToolbar>                                                                                                                                                                                                                                         
						<items>                                                                                                                                                                                                                                                  
							<StandardListItem title="{Description}" info="{ClassificationGroupDescription}"                                                                                                                                                                         
								type="{parts:['ObjectType', 'json>/AppsAvailable'], formatter:'.formatIsNavigationSupported'}" press="navigateToLinkedObject"/>                                                                                                                        
						</items>                                                                                                                                                                                                                                                 
					</List>                                                                                                                                                                                                                                                   
				</IconTabFilter>				                                                                                                                                                                                                                                       
				<IconTabFilter text="Attachment" count="99">                                                                                                                                                                                                               
					<List headerText="{i18n>DisputeDetailLabelAttachments}" noDataText="{i18n>DisputeDetailLabelNoAttachments}" items="{GetAttachments}"                                                                                                                      
						id="disputeAttachments" updateFinished="attachmentLoadingFinsihed" class="sapUiSmallMargin">                                                                                                                                                             
						<headerToolbar>                                                                                                                                                                                                                                          
							<Toolbar>                                                                                                                                                                                                                                               
								<Title text="{i18n>DisputeDetailLabelAttachments}" level="H3" id="textAttachmentsHeader"/>                                                                                                                                                             
								<ToolbarSpacer/>                                                                                                                                                                                                                                       
								<unified:FileUploader buttonOnly="false" buttonText="{i18n>AddAttachment}" sendXHR="true"                                                                                                                                                              
									placeholder="{i18n>DisputeDetailInputUploadAttachment}" tooltip="{i18n>DisputeDetailInputUploadAttachment}" uploadUrl="GetAttachments"                                                                                                                
									multiple="false" useMultipart="false" id="attachmentFileUploader" change="onAttachmentFileUploaderChanged" style="Emphasized"                                                                                                                         
									enabled="{json>/EditMode}" width="320px"/>                                                                                                                                                                                                            
								<Button id="BtnCleanAttachmentFileUploader" icon="sap-icon://sys-cancel" type="Emphasized" enabled="false"                                                                                                                                             
									tooltip="{i18n>DisputeDetailCleanAttachmentFileUploader}" press="cleanAttachmentFileUploader" class="sapUiSmallMarginEnd"/>                                                                                                                           
							</Toolbar>                                                                                                                                                                                                                                              
						</headerToolbar>                                                                                                                                                                                                                                         
						<items>                                                                                                                                                                                                                                                  
							<CustomListItem>                                                                                                                                                                                                                                        
								<content>                                                                                                                                                                                                                                              
									<HBox alignItems="Center" justifyContent="SpaceBetween">                                                                                                                                                                                              
										<items>                                                                                                                                                                                                                                              
											<VBox class="sapUiSmallMarginBegin sapUiTinyMarginTopBottom">                                                                                                                                                                                       
												<Link text="{parts: [ 'FileName', 'CompSize'], formatter:'.formatFileNameWithSize'}"                                                                                                                                                               
													tooltip="{parts: [ 'FileName', 'CompSize'], formatter:'.formatFileNameWithSize'}" press="onDisputeAttachmentPressed" wrapping="true"/>                                                                                                            
												<Text text="{parts: ['CreatedByPersonName', 'CreatedBy','CreationDateTime'], formatter:'.formatAttachmentDetailsLabel'}"                                                                                                                           
													tooltip="{parts: ['CreatedByPersonName', 'CreatedBy','CreationDateTime'], formatter:'.formatAttachmentDetailsLabel'}" wrapping="true"/>                                                                                                           
											</VBox>                                                                                                                                                                                                                                             
											<VBox class="sapUiSmallMarginBegin sapUiTinyMarginTopBottom">                                                                                                                                                                                       
												<Button icon="sap-icon://delete" type="Transparent" press="onDisputeAttachmentDeletePressed" enabled="{json>/EditMode}"                                                                                                                            
													class="sapUiSmallMarginEnd"/>                                                                                                                                                                                                                     
											</VBox>                                                                                                                                                                                                                                             
										</items>                                                                                                                                                                                                                                             
									</HBox>                                                                                                                                                                                                                                               
								</content>                                                                                                                                                                                                                                             
							</CustomListItem>                                                                                                                                                                                                                                       
						</items>                                                                                                                                                                                                                                                 
					</List>                                                                                                                                                                                                                                                   
				</IconTabFilter>                                                                                                                                                                                                                                           
				<IconTabFilter text="Workflow" count="99">                                                                                                                                                                                                                 
				</IconTabFilter>                                                                                                                                                                                                                                           
				                                                                                                                                                                                                                                                           
				                                                                                                                                                                                                                                                           
				<IconTabFilter text="Log" count="{viewModel>/count_log}" key="LOG" >                                                                                                                                                                                       
					                                                                                                                                                                                                                                                          
					<!--smartTable:SmartTable&nbsp;                                                                                                                                                                                                                           
						id="UDMO_DISP_PROT"                                                                                                                                                                                                                                      
					    header="Logs"&nbsp;                                                                                                                                                                                                                                   
					    tableType="ResponsiveTable"                                                                                                                                                                                                                           
					    entitySet="zc_dispute_srmprotocol"&nbsp;                                                                                                                                                                                                              
					    beforeRebindTable="onSelectLogForDispCase"                                                                                                                                                                                                            
					    enableAutoBinding="false"                                                                                                                                                                                                                             
					    useExportToExcel="false"&nbsp;                                                                                                                                                                                                                        
					&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                                                                                                  
					  /-->                                                                                                                                                                                                                                                    
				&nbsp;&nbsp;                                                                                                                                                                                                                                               
					<Table id="UDMO_DISP_PROT"                                                                                                                                                                                                                                
							width="100%"&nbsp;                                                                                                                                                                                                                                      
							noDataText="No Logs"                                                                                                                                                                                                                                    
							showSeparators="All"                                                                                                                                                                                                                                    
							alternateRowColors="true"                                                                                                                                                                                                                               
							sticky="HeaderToolbar,InfoToolbar,ColumnHeaders"                                                                                                                                                                                                        
						>                                                                                                                                                                                                                                                        
						<headerToolbar>                                                                                                                                                                                                                                          
							<Toolbar>                                                                                                                                                                                                                                               
								<content>                                                                                                                                                                                                                                              
									<Title text="Log" level="H2"/>                                                                                                                                                                                                                        
								</content>                                                                                                                                                                                                                                             
							</Toolbar>                                                                                                                                                                                                                                              
						</headerToolbar>                                                                                                                                                                                                                                         
						<columns>                                                                                                                                                                                                                                                
							<Column ><Text text="Time"/></Column>                                                                                                                                                                                                                   
							<!--<Column ><Text text="User"/></Column>/-->                                                                                                                                                                                                           
							<Column ><Text text="Name"/></Column>                                                                                                                                                                                                                   
							<Column ><Text text="Activity"/></Column>                                                                                                                                                                                                               
							<Column demandPopin="true" ><Text text="Old Value"/></Column>                                                                                                                                                                                           
							<Column demandPopin="true" ><Text text="New Value"/></Column>                                                                                                                                                                                           
							<Column demandPopin="true" ><Text text="Attribute Name"/></Column>                                                                                                                                                                                      
						</columns>                                                                                                                                                                                                                                               
						<items>                                                                                                                                                                                                                                                  
							<core:Fragment fragmentName='fin.fscm.dm.dispute.manage.FSCM_DISPUTESExtension.view.tabDispProtColumns' type='XML'/>                                                                                                                                    
						</items>                                                                                                                                                                                                                                                 
					</Table>                                                                                                                                                                                                                                                  
				                                                                                                                                                                                                                                                           
				</IconTabFilter>				                                                                                                                                                                                                                                       
			</items>                                                                                                                                                                                                                                                    
		</IconTabBar>                                                                                                                                                                                                                                                
		<footer>                                                                                                                                                                                                                                                     
			<Bar id="footer">                                                                                                                                                                                                                                           
				<contentLeft>                                                                                                                                                                                                                                              
					<!-- 					<ushell:footerbar.SettingsButton /> -->                                                                                                                                                                                                         
				</contentLeft>                                                                                                                                                                                                                                             
				<contentRight>                                                                                                                                                                                                                                             
					<!-- 					<Button text="{i18n>DisputeListButtonDiscardChanges}" press="discardAllChanges"/> -->                                                                                                                                                           
					<Button text="{i18n>DisputeDetailsButtonVoidCase}" id="ButtonVoidDispute" press="onVoidDisputeCase" enabled="false"/>                                                                                                                                     
					<Button text="{i18n>DisputeListButtonSaveChanges}" id="ButtonSaveDispute" press="saveAllChanges" enabled="false"/>                                                                                                                                        
					<Button text="{i18n>DisputeDetailButtonPrintCorrespondence}" id="ButtonCreateCorrespondence" press="onPrintCorrespondence" visible="true"/>                                                                                                               
					<Button id="ButtonFooterActions" icon="sap-icon://action" press="onActionsShow" tooltip="{i18n>Actions}"/>                                                                                                                                                
				</contentRight>                                                                                                                                                                                                                                            
			</Bar>                                                                                                                                                                                                                                                      
		</footer>                                                                                                                                                                                                                                                    
		<dependents>                                                                                                                                                                                                                                                 
			<core:Fragment fragmentName="fin.fscm.dm.dispute.manage.view.ActionSheetPopoverDisputeList" type="XML"/>                                                                                                                                                    
		</dependents>                                                                                                                                                                                                                                                
	</Page>                                                                                                                                                                                                                                                       
</core:View>                                                                                                                                                                                                                                                   